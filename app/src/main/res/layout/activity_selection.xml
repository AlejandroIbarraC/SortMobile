<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        tools:context=".SelectionActivity" tools:layout_editor_absoluteY="25dp" android:layout_width="match_parent">

    <TextView
            android:text="@string/selection_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="24dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="generar lista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:onClick="generarLista"
            app:layout_constraintStart_toStartOf="@+id/textView" android:layout_marginTop="8dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <TextView
            android:layout_width="wrap_content"
            android:textSize="19dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="78dp"
            app:layout_constraintBottom_toBottomOf="@+id/button2"
            android:layout_marginStart="47dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginBottom="78dp"/>
    <Button
            android:text="Ordenar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:onClick="ordenarSelection"
            android:layout_marginTop="78dp"
            app:layout_constraintTop_toBottomOf="@+id/button" android:layout_marginEnd="17dp"
            app:layout_constraintEnd_toEndOf="@+id/button"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView17"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/button2" app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>